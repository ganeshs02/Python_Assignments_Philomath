#get a character from user and check if the character is number or vovel or conconent


char = input("enter the character:")

def is_vowel(char):
    vowel = {'a', 'e', 'i,' 'o', 'u'}
    if char.lower() in vowel:
      return True

def is_consonent(char):
    if char.isalpha() and not is_vowel:
        return False
    return True

if is_vowel(char):
    print(char, "the character is vowel")

elif is_consonent(char):
    print(char , "the character is consonent")  

